{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON file format",

  "type": "object",

  "properties": {
    "ItemsTemplates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["Id", "Name", "Description", "Type"],
        "properties": {

          "Id": {
            "type": "string",
            "description": "Item's template id"
          },

          "Name": {
            "type": "array",
            "description": "Item's display name in all grama cases",
            "minItems": 7,
            "maxItems": 7,
            "items": {
              "type": "string"
            }
          },

          "Idle": {
            "type": "string",
            "description": "Text shown on items list"
          },

          "Description": {
            "type": "string",
            "description": "Item's detailed description"
          },

          "Type": {
            "type": "string",
            "description": "Item's type",
            "enum": [
              "Weapon1H",
              "Weapon2H",
              "Armor",
              "ArmorWild"
            ]
          },

          "IsLightSource": {
            "type": "boolean",
            "default": "false",
            "description": "Specifies if item lights up the room"
          }
        }
      }
    }
  }
}
